              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#06b6d4" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Badminton</span>
          </div>
          <div class="sport-card" id="sport-tabletennis" onclick="toggleSportSelection('tabletennis')">
            <div class="sport-card-icon" style="background: rgba(236, 72, 153, 0.1);">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#ec4899" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Table Tennis</span>
          </div>
          <div class="sport-card" id="sport-squash" onclick="toggleSportSelection('squash')">
            <div class="sport-card-icon" style="background: rgba(99, 102, 241, 0.1);">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#6366f1" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Squash</span>
          </div>
        </div>
      </div>

      <div>
        <h4 style="font-size: 0.875rem; font-weight: 600; color: var(--gray-600); margin-bottom: 0.75rem;">Individual Sports</h4>
        <div class="sport-grid">
          <div class="sport-card" id="sport-swimming" onclick="toggleSportSelection('swimming')">
            <div class="sport-card-icon" style="background: rgba(14, 165, 233, 0.1);">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#0ea5e9" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Swimming</span>
          </div>
          <div class="sport-card" id="sport-cycling" onclick="toggleSportSelection('cycling')">
            <div class="sport-card-icon" style="background: rgba(132, 204, 22, 0.1);">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#84cc16" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Cycling</span>
          </div>
          <div class="sport-card" id="sport-golf" onclick="toggleSportSelection('golf')">
            <div class="sport-card-icon" style="background: rgba(34, 197, 94, 0.1);">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#22c55e" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Golf</span>
          </div>
          <div class="sport-card" id="sport-archery" onclick="toggleSportSelection('archery')">
            <div class="sport-card-icon" style="background: rgba(251, 146, 60, 0.1);">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#fb923c" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Archery</span>
          </div>
        </div>
      </div>

      <div style="display: flex; justify-content: space-between; margin-top: 1.5rem;">
        <button type="button" class="btn btn-secondary btn-lg" onclick="prevStep()">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
          Back
        </button>
        <button type="button" class="btn btn-primary btn-lg" onclick="nextStep()">
          Continue
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </button>
      </div>
    </div>

    <!-- Step 5: Skill Level per Sport -->
    <div id="step-5" class="hidden">
      <div class="card-header">
        <h2 class="card-title">Set Your Skill Levels</h2>
        <p class="text-muted" style="font-size: 0.875rem; margin-top: 0.25rem;">Rate your skill in each selected sport</p>
      </div>

      <!-- Dynamic skill level selectors based on selected sports -->
      <div id="skill-level-container">
        <div class="form-group" data-sport="cricket">
          <label class="form-label" style="display: flex; align-items: center; gap: 0.5rem;">
            <span style="width: 32px; height: 32px; border-radius: 8px; background: rgba(34, 197, 94, 0.1); display: flex; align-items: center; justify-content: center;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#22c55e" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </span>
            Cricket
          </label>
          <div class="skill-levels">
            <button type="button" class="skill-level" data-level="beginner" onclick="selectSkillLevel('cricket', 'beginner')">Beginner</button>
            <button type="button" class="skill-level" data-level="intermediate" onclick="selectSkillLevel('cricket', 'intermediate')">Intermediate</button>
            <button type="button" class="skill-level" data-level="advanced" onclick="selectSkillLevel('cricket', 'advanced')">Advanced</button>
            <button type="button" class="skill-level" data-level="professional" onclick="selectSkillLevel('cricket', 'professional')">Professional</button>
          </div>
        </div>

        <div class="form-group" data-sport="tennis">
          <label class="form-label" style="display: flex; align-items: center; gap: 0.5rem;">
            <span style="width: 32px; height: 32px; border-radius: 8px; background: rgba(16, 185, 129, 0.1); display: flex; align-items: center; justify-content: center;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </span>
            Tennis
          </label>
          <div class="skill-levels">
            <button type="button" class="skill-level" data-level="beginner" onclick="selectSkillLevel('tennis', 'beginner')">Beginner</button>
            <button type="button" class="skill-level" data-level="intermediate" onclick="selectSkillLevel('tennis', 'intermediate')">Intermediate</button>
            <button type="button" class="skill-level" data-level="advanced" onclick="selectSkillLevel('tennis', 'advanced')">Advanced</button>
            <button type="button" class="skill-level" data-level="professional" onclick="selectSkillLevel('tennis', 'professional')">Professional</button>
          </div>
        </div>
