<!-- 8-Step Onboarding Flow -->
<div class="container container-md" style="padding-top: 2rem; padding-bottom: 2rem;">
  <!-- Progress Indicator -->
  <div class="progress-steps">
    <div class="progress-step">
      <div class="step-circle active" data-step-circle="1">1</div>
    </div>
    <div class="step-line" data-step-line="1"></div>
    <div class="progress-step">
      <div class="step-circle" data-step-circle="2">2</div>
    </div>
    <div class="step-line" data-step-line="2"></div>
    <div class="progress-step">
      <div class="step-circle" data-step-circle="3">3</div>
    </div>
    <div class="step-line" data-step-line="3"></div>
    <div class="progress-step">
      <div class="step-circle" data-step-circle="4">4</div>
    </div>
    <div class="step-line" data-step-line="4"></div>
    <div class="progress-step">
      <div class="step-circle" data-step-circle="5">5</div>
    </div>
    <div class="step-line" data-step-line="5"></div>
    <div class="progress-step">
      <div class="step-circle" data-step-circle="6">6</div>
    </div>
    <div class="step-line" data-step-line="6"></div>
    <div class="progress-step">
      <div class="step-circle" data-step-circle="7">7</div>
    </div>
    <div class="step-line" data-step-line="7"></div>
    <div class="progress-step">
      <div class="step-circle" data-step-circle="8">8</div>
    </div>
  </div>

  <div class="card">
    <!-- Step 1: Basic Info -->
    <div id="step-1">
      <div class="card-header">
        <h2 class="card-title">Basic Information</h2>
        <p class="text-muted" style="font-size: 0.875rem; margin-top: 0.25rem;">Tell us about yourself</p>
      </div>

      <form>
        <div class="form-group">
          <label for="onboard-name" class="form-label">Full Name</label>
          <input type="text" id="onboard-name" class="form-input" placeholder="Enter your full name" value="John Doe">
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label for="onboard-age" class="form-label">Age</label>
            <input type="number" id="onboard-age" class="form-input" placeholder="25" min="13" max="100">
          </div>

          <div class="form-group">
            <label for="onboard-gender" class="form-label">Gender</label>
            <select id="onboard-gender" class="form-input form-select">
              <option value="">Select gender</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
              <option value="other">Other</option>
            </select>
          </div>
        </div>

        <div style="display: flex; justify-content: flex-end; margin-top: 1.5rem;">
          <button type="button" class="btn btn-primary btn-lg" onclick="nextStep()">
            Continue
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </button>
        </div>
      </form>
    </div>

    <!-- Step 2: Location -->
    <div id="step-2" class="hidden">
      <div class="card-header">
        <h2 class="card-title">Your Location</h2>
        <p class="text-muted" style="font-size: 0.875rem; margin-top: 0.25rem;">Help us find players near you</p>
      </div>

      <form>
        <div class="form-group">
          <label for="country" class="form-label">Country</label>
          <select id="country" class="form-input form-select" onchange="onCountryChange('country', 'state', 'city')">
            <option value="">Select country</option>
          </select>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
          <div class="form-group">
            <label for="state" class="form-label">State / Province</label>
            <select id="state" class="form-input form-select" onchange="onStateChange('country', 'state', 'city')">
              <option value="">Select state</option>
            </select>
          </div>

          <div class="form-group">
            <label for="city" class="form-label">City</label>
            <select id="city" class="form-input form-select">
              <option value="">Select city</option>
            </select>
          </div>
        </div>

        <div style="display: flex; justify-content: space-between; margin-top: 1.5rem;">
          <button type="button" class="btn btn-secondary btn-lg" onclick="prevStep()">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="19" y1="12" x2="5" y2="12"></line>
              <polyline points="12 19 5 12 12 5"></polyline>
            </svg>
            Back
          </button>
          <button type="button" class="btn btn-primary btn-lg" onclick="nextStep()">
            Continue
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </button>
        </div>
      </form>
    </div>

    <!-- Step 3: Profile Image & Tagline -->
    <div id="step-3" class="hidden">
      <div class="card-header">
        <h2 class="card-title">Profile Personalization</h2>
        <p class="text-muted" style="font-size: 0.875rem; margin-top: 0.25rem;">Make your profile stand out</p>
      </div>

      <form>
        <div class="form-group">
          <label class="form-label">Profile Photo</label>
          <label for="profile-image-input" class="image-upload">
            <div class="image-upload-preview" id="profile-image-preview">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="var(--gray-400)" stroke-width="1.5" style="margin: 36px;">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
            </div>
            <span style="font-weight: 500; color: var(--primary);">Click to upload photo</span>
            <span style="font-size: 0.75rem; color: var(--gray-500);">PNG, JPG up to 5MB</span>
            <input type="file" id="profile-image-input" accept="image/*" class="hidden">
          </label>
        </div>

        <div class="form-group">
          <label for="tagline" class="form-label">Tagline</label>
          <input type="text" id="tagline" class="form-input" placeholder="e.g., Cricket enthusiast | Weekend warrior" maxlength="200">
          <span class="form-hint">A short bio that describes you (max 200 characters)</span>
        </div>

        <div class="form-group">
          <label for="introduction" class="form-label">Introduction (Optional)</label>
          <textarea id="introduction" class="form-input" rows="3" placeholder="Tell others about your sports journey..."></textarea>
        </div>

        <div style="display: flex; justify-content: space-between; margin-top: 1.5rem;">
          <button type="button" class="btn btn-secondary btn-lg" onclick="prevStep()">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="19" y1="12" x2="5" y2="12"></line>
              <polyline points="12 19 5 12 12 5"></polyline>
            </svg>
            Back
          </button>
          <button type="button" class="btn btn-primary btn-lg" onclick="nextStep()">
            Continue
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </button>
        </div>
      </form>
    </div>

    <!-- Step 4: Sport Selection -->
    <div id="step-4" class="hidden">
      <div class="card-header">
        <h2 class="card-title">Select Your Sports</h2>
        <p class="text-muted" style="font-size: 0.875rem; margin-top: 0.25rem;">
          Choose the sports you play
          <span class="badge badge-primary" style="margin-left: 0.5rem;"><span id="selected-sports-count">0</span> selected</span>
        </p>
      </div>

      <!-- Sport Categories -->
      <div style="margin-bottom: 1.5rem;">
        <h4 style="font-size: 0.875rem; font-weight: 600; color: var(--gray-600); margin-bottom: 0.75rem;">Team Sports</h4>
        <div class="sport-grid">
          <div class="sport-card" id="sport-cricket" onclick="toggleSportSelection('cricket')">
            <div class="sport-card-icon" style="background: rgba(34, 197, 94, 0.1);">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#22c55e" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Cricket</span>
          </div>
          <div class="sport-card" id="sport-football" onclick="toggleSportSelection('football')">
            <div class="sport-card-icon" style="background: rgba(59, 130, 246, 0.1);">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#3b82f6" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Football</span>
          </div>
          <div class="sport-card" id="sport-basketball" onclick="toggleSportSelection('basketball')">
            <div class="sport-card-icon" style="background: rgba(245, 158, 11, 0.1);">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Basketball</span>
          </div>
          <div class="sport-card" id="sport-volleyball" onclick="toggleSportSelection('volleyball')">
            <div class="sport-card-icon" style="background: rgba(239, 68, 68, 0.1);">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#ef4444" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Volleyball</span>
          </div>
          <div class="sport-card" id="sport-hockey" onclick="toggleSportSelection('hockey')">
            <div class="sport-card-icon" style="background: rgba(139, 92, 246, 0.1);">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#8b5cf6" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Hockey</span>
          </div>
        </div>
      </div>

      <div style="margin-bottom: 1.5rem;">
        <h4 style="font-size: 0.875rem; font-weight: 600; color: var(--gray-600); margin-bottom: 0.75rem;">Racket Sports</h4>
        <div class="sport-grid">
          <div class="sport-card" id="sport-tennis" onclick="toggleSportSelection('tennis')">
            <div class="sport-card-icon" style="background: rgba(16, 185, 129, 0.1);">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
            </div>
            <span class="sport-card-name">Tennis</span>
          </div>
          <div class="sport-card" id="sport-badminton" onclick="toggleSportSelection('badminton')">
