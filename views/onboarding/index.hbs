      <div style="display: flex; justify-content: space-between; margin-top: 1.5rem;">
        <button type="button" class="btn btn-secondary btn-lg" onclick="prevStep()">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
          Back
        </button>
        <button type="button" class="btn btn-primary btn-lg" onclick="nextStep()">
          Continue
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </button>
      </div>
    </div>

    <!-- Step 6: Tournament History (Optional) -->
    <div id="step-6" class="hidden">
      <div class="card-header">
        <h2 class="card-title">Tournament History</h2>
        <p class="text-muted" style="font-size: 0.875rem; margin-top: 0.25rem;">Share your competitive experience (optional)</p>
      </div>

      <form>
        <div class="form-group">
          <label class="form-label">Highest Level Competed</label>
          <div style="display: flex; flex-direction: column; gap: 0.75rem;">
            <label class="form-checkbox-group" style="padding: 1rem; border: 1px solid var(--gray-200); border-radius: var(--radius-lg); cursor: pointer;">
              <input type="checkbox" class="form-checkbox" name="tournament_level" value="local">
              <div>
                <span style="font-weight: 500; color: var(--gray-800);">Local / Club Level</span>
                <p style="font-size: 0.75rem; color: var(--gray-500); margin: 0;">Local tournaments, club championships</p>
              </div>
            </label>
            <label class="form-checkbox-group" style="padding: 1rem; border: 1px solid var(--gray-200); border-radius: var(--radius-lg); cursor: pointer;">
              <input type="checkbox" class="form-checkbox" name="tournament_level" value="state">
              <div>
                <span style="font-weight: 500; color: var(--gray-800);">State Level</span>
                <p style="font-size: 0.75rem; color: var(--gray-500); margin: 0;">State championships, inter-district</p>
              </div>
            </label>
            <label class="form-checkbox-group" style="padding: 1rem; border: 1px solid var(--gray-200); border-radius: var(--radius-lg); cursor: pointer;">
              <input type="checkbox" class="form-checkbox" name="tournament_level" value="national">
              <div>
                <span style="font-weight: 500; color: var(--gray-800);">National Level</span>
                <p style="font-size: 0.75rem; color: var(--gray-500); margin: 0;">National championships, inter-state</p>
              </div>
            </label>
            <label class="form-checkbox-group" style="padding: 1rem; border: 1px solid var(--gray-200); border-radius: var(--radius-lg); cursor: pointer;">
              <input type="checkbox" class="form-checkbox" name="tournament_level" value="international">
              <div>
                <span style="font-weight: 500; color: var(--gray-800);">International Level</span>
                <p style="font-size: 0.75rem; color: var(--gray-500); margin: 0;">International tournaments, Olympics</p>
              </div>
            </label>
          </div>
        </div>

        <div style="display: flex; justify-content: space-between; margin-top: 1.5rem;">
          <button type="button" class="btn btn-secondary btn-lg" onclick="prevStep()">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="19" y1="12" x2="5" y2="12"></line>
              <polyline points="12 19 5 12 12 5"></polyline>
            </svg>
            Back
          </button>
          <button type="button" class="btn btn-primary btn-lg" onclick="nextStep()">
            Continue
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </button>
        </div>
      </form>
    </div>

