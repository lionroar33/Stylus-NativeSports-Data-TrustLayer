<style>
  .wallet-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  .wallet-card {
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    border-radius: 16px;
    padding: 1.5rem;
    color: white;
  }
  .wallet-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1rem;
  }
  .wallet-status {
    background: rgba(255,255,255,0.2);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
  }
  .wallet-balance {
    margin-bottom: 1rem;
  }
  .balance-value {
    font-size: 2.5rem;
    font-weight: 700;
  }
  .balance-currency {
    font-size: 1.25rem;
    opacity: 0.8;
    margin-left: 0.5rem;
  }
  .wallet-address {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }
  .wallet-address code {
    background: rgba(255,255,255,0.2);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    flex: 1;
  }
  .wallet-actions {
    display: flex;
    gap: 0.75rem;
  }
  .wallet-actions .btn-outline {
    border-color: rgba(255,255,255,0.5);
    color: white;
  }
  .token-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }
  .token-stat {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.25rem;
  }
  .token-stat .label {
    display: block;
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 0.25rem;
  }
  .token-stat .value {
    font-size: 1.25rem;
    font-weight: 600;
  }
  .token-stat .value.tier {
    color: var(--primary);
  }
  .rewards-section, .leaderboard-section {
    margin-bottom: 2rem;
  }
  .rewards-section h3, .leaderboard-section h3 {
    margin-bottom: 1rem;
  }
  .reward-tiers {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }
  .tier-card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
  }
  .tier-card.highlight {
    border-color: var(--primary);
    background: rgba(99, 102, 241, 0.1);
  }
  .tier-icon { font-size: 2rem; margin-bottom: 0.75rem; }
  .tier-card h4 { margin: 0 0 0.5rem; }
  .tier-card p { margin: 0 0 1rem; font-size: 0.875rem; color: var(--text-muted); }
  .tier-reward {
    display: block;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--primary);
  }
  .tier-multiplier {
    font-size: 0.75rem;
    color: var(--text-muted);
  }
  .leaderboard {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    overflow: hidden;
  }
  .leaderboard-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--border-color);
  }
  .leaderboard-item:last-child { border-bottom: none; }
  .leaderboard-item.you { background: rgba(99, 102, 241, 0.1); }
  .leaderboard-item .rank {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
  }
  .rank-1 .rank { background: #fbbf24; color: #000; }
  .rank-2 .rank { background: #9ca3af; color: #000; }
  .rank-3 .rank { background: #cd7f32; color: #fff; }
  .leaderboard-item .avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--primary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
  }
  .leaderboard-item .player-info { flex: 1; }
  .leaderboard-item .player-info strong { display: block; }
  .leaderboard-item .player-info span { font-size: 0.75rem; color: var(--text-muted); }
  .leaderboard-item .tokens { font-weight: 600; color: var(--primary); }
  @media (max-width: 768px) {
    .wallet-section { grid-template-columns: 1fr; }
  }
