<style>
  .device-status {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
  }
  .device-card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.25rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .device-card.connected {
    border-color: #10b981;
  }
  .device-icon {
    font-size: 2rem;
    width: 56px;
    height: 56px;
    border-radius: 12px;
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .device-info {
    flex: 1;
  }
  .device-info strong { display: block; }
  .device-info span { font-size: 0.875rem; color: var(--text-muted); }
  .device-card.connected .device-info span { color: #10b981; }
  .device-actions {
    display: flex;
    gap: 0.5rem;
  }
  .btn.danger {
    color: #ef4444;
    border-color: #ef4444;
  }
  .health-dashboard, .activity-log {
    margin-bottom: 2rem;
  }
  .health-dashboard h3, .activity-log h3 {
    margin-bottom: 1rem;
  }
  .health-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
  }
  .health-stat-card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
  }
  .stat-ring {
    width: 100px;
    height: 100px;
    margin: 0 auto 1rem;
    position: relative;
  }
  .stat-ring svg {
    width: 100%;
    height: 100%;
  }
  .stat-ring .stat-value {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 1.25rem;
    font-weight: 700;
  }
  .health-stat-card strong {
    display: block;
    margin-bottom: 0.25rem;
  }
  .health-stat-card span {
    font-size: 0.875rem;
    color: var(--text-muted);
  }
  .activity-list {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    overflow: hidden;
  }
  .activity-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--border-color);
  }
  .activity-item:last-child { border-bottom: none; }
  .activity-icon {
    font-size: 1.5rem;
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .activity-details { flex: 1; }
  .activity-details strong { display: block; }
  .activity-details p { margin: 0; font-size: 0.875rem; color: var(--text-muted); }
  .activity-stats {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
  }
  .activity-stats span {
    padding: 0.25rem 0.5rem;
    background: var(--bg-secondary);
    border-radius: 4px;
  }
  .activity-time {
    font-size: 0.875rem;
    color: var(--text-muted);
    min-width: 140px;
    text-align: right;
  }
</style>
