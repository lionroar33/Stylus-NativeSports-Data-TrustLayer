{{!< layouts/main}}

<div class="page-header">
  <div class="page-header-content">
    <div>
      <h1>{{pageTitle}}</h1>
      <p class="text-muted">View and manage your matches</p>
    </div>
    <a href="/matches/create" class="btn btn-primary">+ New Match</a>
  </div>
</div>

<div class="matches-tabs">
  <button class="tab-btn active">Upcoming</button>
  <button class="tab-btn">Live</button>
  <button class="tab-btn">Completed</button>
</div>

<div class="matches-list">
  <div class="match-card">
    <div class="match-status live">LIVE</div>
    <div class="match-teams">
      <div class="team">
        <span class="team-name">Team Alpha</span>
        <span class="team-score">156/4</span>
      </div>
      <span class="vs">vs</span>
      <div class="team">
        <span class="team-name">Team Beta</span>
        <span class="team-score">--</span>
      </div>
    </div>
    <div class="match-info">
      <span>T20 Match</span>
      <span>18.2 overs</span>
    </div>
    <a href="/scoring/cricket" class="btn btn-sm btn-outline">View Scorecard</a>
  </div>

  <div class="match-card">
    <div class="match-status upcoming">UPCOMING</div>
    <div class="match-teams">
      <div class="team">
        <span class="team-name">Team Gamma</span>
      </div>
      <span class="vs">vs</span>
      <div class="team">
        <span class="team-name">Team Delta</span>
      </div>
    </div>
    <div class="match-info">
      <span>ODI Match</span>
      <span>Tomorrow, 2:00 PM</span>
    </div>
    <button class="btn btn-sm btn-outline">Details</button>
  </div>

  <div class="match-card">
    <div class="match-status completed">COMPLETED</div>
    <div class="match-teams">
      <div class="team winner">
        <span class="team-name">Team Alpha</span>
        <span class="team-score">189/6</span>
      </div>
      <span class="vs">vs</span>
      <div class="team">
        <span class="team-name">Team Epsilon</span>
        <span class="team-score">145/10</span>
      </div>
    </div>
    <div class="match-info">
      <span>T20 Match</span>
      <span>Team Alpha won by 44 runs</span>
    </div>
    <button class="btn btn-sm btn-outline">View Details</button>
  </div>
</div>

<style>
  .page-header-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  .matches-tabs {
    display: flex;
    gap: 0.5rem;
    margin: 1.5rem 0;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.5rem;
  }
  .tab-btn {
    padding: 0.5rem 1rem;
    border: none;
    background: none;
    color: var(--text-muted);
    cursor: pointer;
    border-radius: 6px;
  }
  .tab-btn.active {
    background: var(--primary);
    color: white;
  }
  .matches-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .match-card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.5rem;
  }
  .match-status {
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    display: inline-block;
    margin-bottom: 1rem;
  }
  .match-status.live { background: #ef4444; color: white; }
  .match-status.upcoming { background: #f59e0b; color: white; }
  .match-status.completed { background: #10b981; color: white; }
  .match-teams {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  .team {
    display: flex;
    flex-direction: column;
  }
  .team-name { font-weight: 600; }
  .team-score { font-size: 1.25rem; color: var(--primary); }
  .team.winner .team-name { color: var(--success); }
  .vs { color: var(--text-muted); }
  .match-info {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }
</style>
