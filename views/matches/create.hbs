{{!< layouts/main}}

<div class="page-header">
  <h1>{{pageTitle}}</h1>
  <p class="text-muted">Set up a new match</p>
</div>

<form class="match-form">
  <div class="form-section">
    <h3>Match Details</h3>
    <div class="form-row">
      <div class="form-group">
        <label>Match Format</label>
        <select class="form-control">
          <option>T20 (20 overs)</option>
          <option>ODI (50 overs)</option>
          <option>Test (Unlimited)</option>
          <option>Custom</option>
        </select>
      </div>
      <div class="form-group">
        <label>Overs per Innings</label>
        <input type="number" class="form-control" value="20">
      </div>
    </div>
  </div>

  <div class="form-section">
    <h3>Team 1</h3>
    <div class="form-group">
      <label>Team Name</label>
      <input type="text" class="form-control" placeholder="Enter team name">
    </div>
    <div class="form-group">
      <label>Players (comma separated)</label>
      <textarea class="form-control" rows="3" placeholder="Player 1, Player 2, Player 3..."></textarea>
    </div>
  </div>

  <div class="form-section">
    <h3>Team 2</h3>
    <div class="form-group">
      <label>Team Name</label>
      <input type="text" class="form-control" placeholder="Enter team name">
    </div>
    <div class="form-group">
      <label>Players (comma separated)</label>
      <textarea class="form-control" rows="3" placeholder="Player 1, Player 2, Player 3..."></textarea>
    </div>
  </div>

  <div class="form-section">
    <h3>Schedule</h3>
    <div class="form-row">
      <div class="form-group">
        <label>Date</label>
        <input type="date" class="form-control">
      </div>
      <div class="form-group">
        <label>Time</label>
        <input type="time" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <label>Venue</label>
      <input type="text" class="form-control" placeholder="Enter venue name">
    </div>
  </div>

  <div class="form-actions">
    <button type="button" class="btn btn-outline">Cancel</button>
    <button type="submit" class="btn btn-primary">Create Match</button>
  </div>
</form>

<style>
  .match-form {
    max-width: 600px;
  }
  .form-section {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }
  .form-section h3 {
    margin: 0 0 1rem;
    font-size: 1rem;
  }
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }
  .form-group {
    margin-bottom: 1rem;
  }
  .form-group:last-child {
    margin-bottom: 0;
  }
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    font-size: 0.875rem;
  }
  .form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
  }
</style>
