<!-- OTP Verification Page -->
<div class="auth-card" style="max-width: 420px;">
  <div class="auth-header">
    <div style="width: 64px; height: 64px; border-radius: 16px; background: rgba(37, 99, 235, 0.1); display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#2563eb" stroke-width="2">
        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
      </svg>
    </div>
    <h1 class="auth-title">Verify your identity</h1>
    <p class="auth-subtitle">
      We've sent a 6-digit code to<br>
      <strong style="color: var(--gray-800);">+91 98765 *****</strong>
    </p>
  </div>

  <!-- OTP Input -->
  <form id="otp-form" onsubmit="return false;">
    <div class="form-group">
      <div class="otp-container">
        <input type="text" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]" autofocus>
        <input type="text" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]">
        <input type="text" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]">
        <input type="text" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]">
        <input type="text" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]">
        <input type="text" class="otp-input" maxlength="1" inputmode="numeric" pattern="[0-9]">
      </div>
    </div>

    <!-- Timer & Resend -->
    <div class="text-center mb-6">
      <p style="font-size: 0.875rem; color: var(--gray-500);" id="otp-timer">
        Resend code in <span style="color: var(--primary); font-weight: 600;">0:30</span>
      </p>
      <button type="button" class="btn btn-secondary btn-sm" id="resend-btn" style="display: none;">
        Resend Code
      </button>
    </div>

    <button type="submit" id="verify-btn" class="btn btn-primary btn-lg btn-block" onclick="window.location.href='/onboarding'">
      Verify & Continue
    </button>
  </form>

  <!-- Change Number -->
  <div class="text-center mt-6">
    <a href="/register" style="font-size: 0.875rem; color: var(--gray-500);">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="vertical-align: middle; margin-right: 4px;">
        <line x1="19" y1="12" x2="5" y2="12"></line>
        <polyline points="12 19 5 12 12 5"></polyline>
      </svg>
      Change phone number
    </a>
  </div>

  <!-- Help Text -->
  <div style="margin-top: 2rem; padding: 1rem; background: var(--gray-50); border-radius: var(--radius-lg);">
    <p style="font-size: 0.75rem; color: var(--gray-500); margin: 0; line-height: 1.5;">
      <strong>Didn't receive the code?</strong><br>
      Check your SMS inbox or spam folder. You can also request a new code via WhatsApp.
    </p>
  </div>
</div>

<script>
  // OTP Timer countdown
  let timeLeft = 30;
  const timerEl = document.getElementById('otp-timer');
  const resendBtn = document.getElementById('resend-btn');

  const countdown = setInterval(() => {
    timeLeft--;
    if (timeLeft <= 0) {
      clearInterval(countdown);
      timerEl.style.display = 'none';
      resendBtn.style.display = 'inline-flex';
    } else {
      timerEl.innerHTML = `Resend code in <span style="color: var(--primary); font-weight: 600;">0:${timeLeft.toString().padStart(2, '0')}</span>`;
    }
  }, 1000);
</script>
