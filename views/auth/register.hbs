<!-- Registration Page -->
<div class="auth-card">
  <div class="auth-header">
    <a href="/" style="display: inline-block;">
      <svg width="56" height="56" viewBox="0 0 56 56" fill="none" class="auth-logo">
        <rect width="56" height="56" rx="12" fill="#2563eb"/>
        <path d="M28 12L40 19V37L28 44L16 37V19L28 12Z" stroke="white" stroke-width="2" fill="none"/>
        <circle cx="28" cy="28" r="6" fill="white"/>
      </svg>
    </a>
    <h1 class="auth-title">Create your account</h1>
    <p class="auth-subtitle">Join the Sport Performance Protocol community</p>
  </div>

  <!-- Registration Form -->
  <form id="register-form" onsubmit="return false;">
    <!-- Tab Switcher: Email / Phone -->
    <div style="display: flex; background: var(--gray-100); border-radius: var(--radius-lg); padding: 4px; margin-bottom: 1.5rem;">
      <button type="button" class="btn btn-block" style="flex: 1; background: white; box-shadow: var(--shadow-sm);" data-tab-button="register-method" data-tab="reg-email-tab" onclick="switchTab('register-method', 'reg-email-tab')">
        Email
      </button>
      <button type="button" class="btn btn-block" style="flex: 1; background: transparent;" data-tab-button="register-method" data-tab="reg-phone-tab" onclick="switchTab('register-method', 'reg-phone-tab')">
        Phone
      </button>
    </div>

    <!-- Email Registration -->
    <div id="reg-email-tab" data-tab-group="register-method">
      <div class="form-group">
        <label for="reg-name" class="form-label">Full Name</label>
        <input type="text" id="reg-name" name="name" class="form-input" placeholder="John Doe" required>
      </div>

      <div class="form-group">
        <label for="reg-email" class="form-label">Email Address</label>
        <input type="email" id="reg-email" name="email" class="form-input" placeholder="you@example.com" required>
      </div>

      <div class="form-group">
        <label for="reg-password" class="form-label">Password</label>
        <input type="password" id="reg-password" name="password" class="form-input" placeholder="Create a strong password" required>
        <span class="form-hint">Must be at least 8 characters with uppercase, lowercase, and number</span>
      </div>

      <div class="form-group">
        <label for="reg-confirm-password" class="form-label">Confirm Password</label>
        <input type="password" id="reg-confirm-password" name="confirm_password" class="form-input" placeholder="Confirm your password" required>
      </div>
    </div>

    <!-- Phone Registration -->
    <div id="reg-phone-tab" data-tab-group="register-method" class="hidden">
      <div class="form-group">
        <label for="reg-phone-name" class="form-label">Full Name</label>
        <input type="text" id="reg-phone-name" name="name" class="form-input" placeholder="John Doe" required>
      </div>

      <div class="form-group">
        <label for="reg-phone" class="form-label">Phone Number</label>
        <div style="display: flex; gap: 0.5rem;">
          <select class="form-input form-select" style="width: 100px;">
            <option value="+91">+91</option>
            <option value="+1">+1</option>
            <option value="+44">+44</option>
            <option value="+61">+61</option>
          </select>
          <input type="tel" id="reg-phone" name="phone" class="form-input" placeholder="9876543210" style="flex: 1;">
        </div>
        <span class="form-hint">We'll send you a verification code via SMS/WhatsApp</span>
      </div>
    </div>

    <!-- Terms & Conditions -->
    <div class="form-group">
      <label class="form-checkbox-group">
        <input type="checkbox" class="form-checkbox" name="terms" required>
        <span style="font-size: 0.875rem; color: var(--gray-600);">
          I agree to the <a href="/terms">Terms of Service</a> and <a href="/privacy">Privacy Policy</a>
        </span>
      </label>
    </div>

    <button type="submit" id="register-btn" class="btn btn-primary btn-lg btn-block" onclick="window.location.href='/verify-otp'">
      Create Account
    </button>
  </form>

  <!-- Divider -->
  <div class="divider">
    <span>or sign up with</span>
  </div>

  <!-- Social Login -->
  <div class="social-buttons">
    <button class="btn-social">
      <svg width="20" height="20" viewBox="0 0 24 24">
        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
      </svg>
      <span>Google</span>
    </button>
    <button class="btn-social">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.989C18.343 21.129 22 16.99 22 12c0-5.523-4.477-10-10-10z"/>
      </svg>
      <span>Apple</span>
    </button>
  </div>

  <!-- Login Link -->
  <p class="text-center mt-6" style="font-size: 0.875rem; color: var(--gray-600);">
    Already have an account? <a href="/login">Sign in</a>
  </p>
</div>
